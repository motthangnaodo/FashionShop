@model IEnumerable<FashionShopConnection.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #5d5e63;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }
</style>

<h2>Quản Lý Sản Phẩm </h2>

<table>
    <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Hình Ảnh</th>
        <th>Giá</th>
        <th>Status</th>
        <th colspan="2">
            <a href="@Url.Action("Create","SP")"><img src="~/Asset/images/addnsx.png" style="margin-left:auto" /></a>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSanPham</td>
            <td>@item.TenSanPham</td>
            <td><img src="~/Asset/images/@item.HinhChinh" style="width:50px;height:50px;"/></td>
            <td>@item.Gia</td>
            <td>@item.TinhTrang</td>
            <td><a href="#"><img src="~/Asset/images/editnsx.png" /></a></td>
            <td><a href="#"><img src="~/Asset/images/deletensx.png" /></a></td>
        </tr>
    }

</table>

